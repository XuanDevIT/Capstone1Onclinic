<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_DanhGia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/guideline95"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_view"
        android:backgroundTint="#EFE6E6"
        android:padding="5dp"
        >

    <LinearLayout
        android:id="@+id/linearLayout_DanhGia_BN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="7dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgItemDanhGia_avatarBN"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/image_profile"
        android:layout_gravity="center"
         />

    <TextView
        android:id="@+id/txtItemDanhGia_TenBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="ho va ten"
        android:textColor="#000"
        android:textSize="17sp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

            <RatingBar
                android:id="@+id/itemDanhGia_ratingbar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize=".5"
                />

            <TextView
                android:id="@+id/txtItemDanhGia_Nhanxet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nhận xét"
                android:textColor="#000"
                android:textSize="20sp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>