<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_view"
    android:padding="20dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Thay đổi mật khẩu:"
        android:textSize="22sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edt_thay_doi_mk1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:hint="Nhập mật khẩu cũ"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_thay_doi_mk2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập mật khẩu mới"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/edt_thay_doi_mk3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập lại mật khẩu mới"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnCapNhatTDMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_view_green_button"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnHuyTDMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_view_green_button"
            android:text="Hủy"
            android:backgroundTint="#EFE6E6"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>